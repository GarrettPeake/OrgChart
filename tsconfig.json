{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "dist",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"lib": ["es2021"],
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@cli/*": ["src/cli/*"],
			"@server/*": ["src/server/*"]
		}
	},
	"include": ["src", "tst"],
	"exclude": ["node_modules", "dist"]
}
